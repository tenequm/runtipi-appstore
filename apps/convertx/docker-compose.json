{
  "$schema": "../dynamic-compose-schema.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "convertx",
      "image": "ghcr.io/c4illin/convertx:v0.14.1",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        { "key": "PUID", "value": "1000" },
        { "key": "PGID", "value": "1000" },
        { "key": "ACCOUNT_REGISTRATION", "value": "${ACCOUNT_REGISTRATION:-false}" },
        { "key": "JWT_SECRET", "value": "${JWT_SECRET}" },
        { "key": "HTTP_ALLOWED", "value": "true" },
        { "key": "ALLOW_UNAUTHENTICATED", "value": "${ALLOW_UNAUTHENTICATED:-false}" },
        { "key": "AUTO_DELETE_EVERY_N_HOURS", "value": "${AUTO_DELETE_EVERY_N_HOURS:-24}" },
        { "key": "FFMPEG_ARGS", "value": "${FFMPEG_ARGS}" },
        { "key": "WEBROOT", "value": "${WEBROOT}" },
        { "key": "HIDE_HISTORY", "value": "${HIDE_HISTORY:-false}" },
        { "key": "TZ", "value": "${TZ}" },
        { "key": "LANGUAGE", "value": "${LANGUAGE:-en}" }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/app/data"
        }
      ],
      "healthCheck": {
        "test": "curl -f http://localhost:3000 || exit 1",
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    }
  ]
}
