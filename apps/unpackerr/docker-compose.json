{
  "$schema": "../dynamic-compose-schema.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "unpackerr",
      "image": "ghcr.io/unpackerr/unpackerr:0.14.5",
      "isMain": true,
      "internalPort": 5656,
      "user": "1000:1000",
      "environment": {
        "TZ": "${TZ}",
        "UN_WEBSERVER_METRICS": "true",
        "UN_WEBSERVER_LISTEN_ADDR": "0.0.0.0:5656",
        "UN_LOG_FILE": "/data/unpackerr.log",
        "UN_LOG_FILES": "5",
        "UN_LOG_FILE_MB": "10",
        "UN_INTERVAL": "2m",
        "UN_START_DELAY": "1m",
        "UN_SONARR_0_URL": "${SONARR_URL}",
        "UN_SONARR_0_API_KEY": "${SONARR_API_KEY}",
        "UN_SONARR_0_PATHS_0": "/data/torrents",
        "UN_RADARR_0_URL": "${RADARR_URL}",
        "UN_RADARR_0_API_KEY": "${RADARR_API_KEY}",
        "UN_RADARR_0_PATHS_0": "/data/torrents",
        "UN_LIDARR_0_URL": "${LIDARR_URL}",
        "UN_LIDARR_0_API_KEY": "${LIDARR_API_KEY}",
        "UN_LIDARR_0_PATHS_0": "/data/torrents",
        "UN_READARR_0_URL": "${READARR_URL}",
        "UN_READARR_0_API_KEY": "${READARR_API_KEY}",
        "UN_READARR_0_PATHS_0": "/data/torrents"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/config"
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media",
          "containerPath": "/data"
        }
      ]
    }
  ]
}
