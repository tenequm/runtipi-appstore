{
  "$schema": "../dynamic-compose-schema.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "unpackerr",
      "image": "ghcr.io/hotio/unpackerr:release-0.14.5",
      "isMain": true,
      "internalPort": 5656,
      "environment": [
        { "key": "PUID", "value": "1000" },
        { "key": "PGID", "value": "1000" },
        { "key": "UMASK", "value": "002" },
        { "key": "TZ", "value": "${TZ}" },
        { "key": "UN_WEBSERVER_METRICS", "value": "true" },
        { "key": "UN_WEBSERVER_LISTEN_ADDR", "value": "0.0.0.0:5656" },
        { "key": "UN_INTERVAL", "value": "2m" },
        { "key": "UN_START_DELAY", "value": "1m" },
        { "key": "UN_SONARR_0_URL", "value": "${SONARR_URL}" },
        { "key": "UN_SONARR_0_API_KEY", "value": "${SONARR_API_KEY}" },
        { "key": "UN_SONARR_0_PATHS_0", "value": "/media/torrents" },
        { "key": "UN_RADARR_0_URL", "value": "${RADARR_URL}" },
        { "key": "UN_RADARR_0_API_KEY", "value": "${RADARR_API_KEY}" },
        { "key": "UN_RADARR_0_PATHS_0", "value": "/media/torrents" },
        { "key": "UN_LIDARR_0_URL", "value": "${LIDARR_URL}" },
        { "key": "UN_LIDARR_0_API_KEY", "value": "${LIDARR_API_KEY}" },
        { "key": "UN_LIDARR_0_PATHS_0", "value": "/media/torrents" },
        { "key": "UN_READARR_0_URL", "value": "${READARR_URL}" },
        { "key": "UN_READARR_0_API_KEY", "value": "${READARR_API_KEY}" },
        { "key": "UN_READARR_0_PATHS_0", "value": "/media/torrents" }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/config"
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media",
          "containerPath": "/media"
        }
      ]
    }
  ]
}
